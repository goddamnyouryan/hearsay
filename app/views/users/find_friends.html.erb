<%= render :partial => "setup_nav" %>

<div id="import_friends_list">

<%= title "import contacts", :h2 %>

<h3 style="margin: 15px 0;">sign into your email account to see which of your<br />
contacts are already signed up for HEARSAY.</h3>

<% form_tag :action => "import", :id => @user do %>
		<div style="float:left;" id="edit_profile">
				<input type="radio" value="gmail" name="from" id="from" checked><%= image_tag("gmail.gif") %></option><br/>
				<input type="radio" value="yahoo" name="from" id="from"><%= image_tag("yahoo.gif") %></option><br/>
				<input type="radio" value="hotmail" name="from" id="from"><%= image_tag("hotmail.gif") %></option><br/>
		</div>

<div style="float:left;margin-left:50px;">
	<input type="text" name="login" class="text_field" value="email address" onfocus="this.value=''" style="margin-bottom:0;"> e.g. ryan.macinnes@gmail.com<br/>
	<input type="password" name="password" class="text_field" value="password" onfocus="this.value=''">
</div>

	<div class="clear"></div>
	
	<h3 style="margin: 15px 0;">HEARSAY will never store your email or password. <br /> nor will we spam your ass. </h3>


<span style="margin-left:395px;">
<%= link_to "skip this step", suggestions_path %>
<%= submit_tag "Find My Friends", :class => "button" %>
<img src="http://goddamnyouryan.com/images/ajax-loader.gif" id="busy" style="border:none;margin-top:25px;display:none;" />
</span>


	<div class="clear"></div>
	
</div>


<% end %>