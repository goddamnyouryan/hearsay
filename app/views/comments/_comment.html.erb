<% if comment.state == "unread" && comment.answer.user == current_user %>
<li id="<%= comment.answer.id %>_<%=comment.id %>" class="unread_comment">
<% else %>
<li id="<%= comment.answer.id %>_<%=comment.id %>">
<% end %>
	<%= link_to(comment.user.login, :controller => 'users', :action => 'show', :login => comment.user.login) %> <%= comment.message %>
	<div class="small_timeago"><%= distance_of_time_in_words_to_now(comment.created_at) %> ago
		<% if comment.user == current_user %>
			<%= link_to_remote "delete", :url => { :controller => 'comments', :action => 'destroy', :poop => comment, :cunt => comment.answer }, :confirm => 'delete this comment?' %>
		<% end %>		
	</div>
</li>