<%= title "A Picture of #{@user.login}" %>

<h2>a picture of <%= link_to(@user.login,  user_images_path(@user))%></h2>
<h3>if you like this picture of <%= link_to(@user.login,  user_images_path(@user))%>, vote it up below!</h3>

	<div id="image_entry">
	<ul>
			<li><%= link_to "previous", @previous %></li>
			<li><%= link_to "next", @next %></li>
		</ul>
		<div class="clear"></div>
		<%= link_to "#{image_tag @image.photo.url(:full)}", @next %>
		<div class="clear"></div>
		
			<span id="<%= @image.id %>_vote_score" class="votes_count" style="position:relative;top:-32px;left:8px;">
			<%= @image.ranks.size %>
			</span>
			<div class="clear"></div>
			<div style="background:#D6D6D6;float:left;width:100%;">
			<span style="float:left; padding:10px;">
			submitted by <%= link_to @author.login, user_path(:login => @author.login) %><br />
			<span class="timeago">
					<%= distance_of_time_in_words_to_now(@image.created_at) %> ago
			</span>
			</span>
		
		<span id="<%= @image.id %>_vote_form" class="voted_on" style="float: right;">
			<% if ranked_up(@image) %>

				+
				
			<% else%>
			
				<% form_remote_for [ @image, Rank.new ] do |f| %>
					<%= f.submit "+" %>
				<% end %>
				
			<% end %>
			
			
		</span>

	 </div>		
		
		
	</div>
	
	<div style="float:right;text-align:right;margin-top:27px;">
