<% unless event.user.images.empty? %>
		<% event.user.images.highest_ranked.each do |i| %>
  		<% @event_image = i.photo.url(:small) %>
		<% end %>	
		<%= link_to("#{image_tag @event_image}", :controller => 'users', :action => 'show', :login => event.user.login) %>
<% else %>
		<%= link_to("#{image_tag("30x30_no_images.png")}", :controller => 'users', :action => 'show', :login => event.user.login) %>
<% end %>